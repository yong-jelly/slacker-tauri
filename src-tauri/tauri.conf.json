{
  "productName": "mirumi",
  "identifier": "com.mirumi.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "미루미(MIRUMI)",
        "width": 700,
        "height": 800,
        "minWidth": 180,
        "minHeight": 100,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
"bundle": {
  "active": true,
  "targets": "all",
  "icon": [
    "icons/32x32.png",
    "icons/128x128.png",
    "icons/128x128@2x.png",
    "icons/icon.icns",
    "icons/icon.ico"
  ],
  "macOS": {
    "signingIdentity": "-"
  }
}
}
